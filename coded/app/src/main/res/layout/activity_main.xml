<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#121010"
    android:foreground="?android:attr/textCheckMark"
    android:foregroundTint="#EACBD8"
    android:hapticFeedbackEnabled="true"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="16dp"
        android:background="#F57C00"
        android:backgroundTint="#FFFFFF"
        android:drawableTint="#9C27B0"
        android:fontFamily="cursive"
        android:text="Grade Calculater"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#100F0F"
        android:textColorLink="#0E0E0E"
        android:textSize="36sp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="223dp"
        android:layout_height="100dp"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        android:layout_marginTop="20"
        android:background="#7B1FA2"
        android:backgroundTint="#7B1FA2"
        android:ems="10"
        android:hint="Quizzes 15%"
        android:inputType="textPersonName"
        android:textSize="30" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="223dp"
        android:layout_height="100dp"
        android:layout_marginLeft="120dp"
        android:background="#7B1FA2"
        android:ems="10"
        android:hint="Homework 25%"
        android:inputType="textPersonName"
        android:textSize="30sp"
        android:layout_marginRight="120dp"/>

    <EditText
        android:id="@+id/editText3"
        android:layout_width="223dp"
        android:layout_height="100dp"
        android:layout_marginLeft="120dp"
        android:background="#7B1FA2"
        android:ems="10"
        android:hint="Mid Terms 30%"
        android:inputType="textPersonName"
        android:textSize="30sp"
        android:layout_marginRight="120dp"/>

    <EditText
        android:id="@+id/editText4"
        android:layout_width="223dp"
        android:layout_height="100dp"
        android:layout_marginLeft="120dp"
        android:background="#7B1FA2"
        android:ems="10"
        android:hint="Finale 30%"
        android:inputType="textPersonName"
        android:textSize="30sp"
        android:layout_marginRight="120dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="216dp"
        android:layout_height="120dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="40"
        android:layout_marginRight="120dp"
        android:layout_marginBottom="172dp"
        android:background="#512DA8"
        android:text="Calculate"
        android:textSize="30sp" />

</LinearLayout>